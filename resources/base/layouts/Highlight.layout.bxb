layout-macro-def (findpet-highlight) {
  params {
    param (results) {
      type (Results)
      min (Required) max (Many)
    }
  }
  content {
    image-card {
      aspect-ratio (4:3)
      title-area {
          halign (Start)
          slot1 {
              text {
                  value ("#{value(results.careNm)}") 
                  style (Title_M)
              }
          }
          slot2 {
                single-line {
                text {
                    value ("#{value(results.careTel)}") 
                    style (Detail_M)
                }
              }
            }
          slot3 {
              single-line {
              text {
                  value ("발견장소: #{value(results.happenDt)}, #{value(results.happenPlace)} ")
                  style (Detail_L)
              }
             }
          }
      }
      image-url ("#{value(results.popfile)}")
    }
  }
}